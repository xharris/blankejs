{
  "name": "BlankE",
  "description": "BlankE game dev environment",
  "version": "0.11.9",
  "main": "entry.js",
  "single-instance": false,
  "chromium-args": "--enable-webgl --ignore-gpu-blacklist --allow-file-access-from-files",
  "repository": {
    "type": "git",
    "url": "https://github.com/xharris/blankejs.git"
  },
  "scripts": {
    "electron": "electron .",
    "build": "electron-builder",
    "release": "env-cmd electron-builder",
    "test": "",
    "test:local": "mocha --exit ./test"
  },
  "build": {
    "appId": "com.electron.blanke",
    "win": {
      "icon": "logo.ico",
      "target": [
        "nsis"
      ],
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/logo.ico",
      "installerHeaderIcon": "src/logo.ico"
    },
    "directories": {
      "buildResources": "src"
    },
    "files": [
      "index.html",
      "entry.js",
      "entry.less",
      "package.json",
      "src/",
      "node_modules/"
    ],
    "extraFiles": [
      "plugins",
      "engines/love2d",
      "themes"
    ]
  },
  "dependencies": {
    "adm-zip": "^0.4.13",
    "archiver": "^2.1.1",
    "electron-is-dev": "^1.2.0",
    "electron-unhandled": "^3.0.2",
    "electron-updater": "^4.2.5",
    "env-cmd": "^10.1.0",
    "fs-extra": "^5.0.0",
    "jquery": "^3.5.0",
    "jquery.fancytree": "^2.35.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "lodash.clonedeep": "^4.5.0",
    "markdown-it": "^9.1.0",
    "minimist": "^1.2.5",
    "node-watch": "^0.6.0",
    "request": "^2.88.0",
    "true-case-path": "^2.2.1",
    "uglify-es": "^3.3.9",
    "update-electron-app": "^1.5.0",
    "walk": "^2.3.13"
  },
  "devDependencies": {
    "asar": "^3.0.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "electron": "^5.0.3",
    "electron-builder": "^22.4.1",
    "expect.js": "^0.3.1",
    "mocha": "^7.1.1",
    "spectron": "^7.0.0",
    "xvfb-maybe": "^0.2.1"
  }
}