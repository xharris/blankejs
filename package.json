{
  "name": "BlankE",
  "description": "BlankE game dev environment",
  "author": "XHH <xhh950@gmail.com>",
  "version": "0.12.4",
  "main": "entry.js",
  "single-instance": false,
  "chromium-args": "--enable-webgl --ignore-gpu-blacklist --allow-file-access-from-files",
  "repository": {
    "type": "git",
    "url": "https://github.com/xharris/blankejs.git"
  },
  "scripts": {
    "dev": "electron .",
    "electron": "electron .",
    "build": "env-cmd electron-builder",
    "release": "electron-builder",
    "release-local": "env-cmd electron-builder",
    "test": "",
    "test:local": "mocha --exit ./test"
  },
  "build": {
    "appId": "com.xhh.blanke",
    "artifactName": "BlankE-${os}-${arch}.${ext}",
    "compression": "maximum",
    "win": {
      "icon": "logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/logo.ico",
      "installerHeaderIcon": "src/logo.ico"
    },
    "linux": {
      "icon": "icon_sizes",
      "category": "Development",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "afterSign": "build/notarize.js",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "src/logo.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        "default"
      ]
    },
    "dmg": {
      "sign": false
    },
    "directories": {
      "buildResources": "src"
    },
    "files": [
      "index.html",
      "entry.js",
      "entry.less",
      "package.json",
      "src/",
      "node_modules/"
    ],
    "extraFiles": [
      "plugins",
      "love2d",
      "themes",
      "template"
    ]
  },
  "dependencies": {
    "adm-zip": "^0.4.16",
    "crypto-js": "^4.0.0",
    "dotenv": "^8.2.0",
    "electron-context-menu": "^2.3.0",
    "electron-is-dev": "^1.2.0",
    "electron-unhandled": "^3.0.2",
    "electron-updater": "^4.3.4",
    "fs-extra": "^5.0.0",
    "interactjs": "^1.9.22",
    "jquery": "^3.5.0",
    "jquery.fancytree": "^2.36.1",
    "js-yaml": "^3.14.0",
    "klaw": "^3.0.0",
    "lodash": "^4.17.20",
    "lodash.clonedeep": "^4.5.0",
    "luamin": "^1.0.4",
    "markdown-it": "^12.3.2",
    "minimist": "^1.2.5",
    "mustache": "^4.0.1",
    "node-watch": "^0.6.0",
    "request": "^2.88.2",
    "true-case-path": "^2.2.1",
    "update-electron-app": "^1.5.0",
    "uuid": "^8.3.0",
    "v8-compile-cache": "^2.1.1",
    "walk": "^2.3.13"
  },
  "devDependencies": {
    "asar": "^3.0.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "electron": "^7.2.4",
    "electron-builder": "^22.8.0",
    "electron-notarize": "^1.0.0",
    "env-cmd": "^10.1.0",
    "expect.js": "^0.3.1",
    "mocha": "^7.2.0",
    "spectron": "^11.1.0"
  }
}
